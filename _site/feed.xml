  <title type="html"><![CDATA[漫游中大]]></title>
  <link>http://localhost:4000/album/%E6%BC%AB%E6%B8%B8%E4%B8%AD%E5%A4%A7</link>
  <id>http://localhost:4000/album/漫游中大</id>
